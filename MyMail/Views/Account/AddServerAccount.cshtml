@using MyMail.Models.Entities
@model Account
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddServerAccount</title>
</head>
<body>
<h2>Add new ServerAccount</h2>

<div>
    @using (@Html.BeginForm())
    {
        @Html.ValidationSummary()
        
        <p><label>SMTP Server Host: </label> @Html.EditorFor(m => m.SmtpServerHost)</p>
        <p><label>SMTP Server Port: </label> @Html.EditorFor(m => m.SmtpServerPort)</p>
        <p><label>POP3 Server Host: </label> @Html.EditorFor(m => m.Pop3ServerHost)</p>
        <p><label>POP3 Server Port: </label> @Html.EditorFor(m => m.Pop3ServerPort)</p>
        <p><label>Mail Address: </label> @Html.EditorFor(m => m.MailAddress)</p>
        <p><label>Mail Password: </label> @Html.EditorFor(m => m.MailPassword)</p>
        
        <input type="submit" value="Submit"/>
    }
</div>

</body>
</html>
