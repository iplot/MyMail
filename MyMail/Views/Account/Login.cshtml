
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
<h2>Login</h2>

<div>
    @using (Html.BeginForm())
    {
        <label>Login</label>
        @Html.TextBox("login")<p/>
        <label>Password</label>@Html.Password("password")<p/>

        <button type="submit">Submit</button>
    }
</div>
</body>
</html>
