@using MyMail.Models.Entities
@model User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
<h2>Login</h2>

<div>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary()
        
        <p><label>Login: </label> @Html.EditorFor(m => m.Login)</p>
        <p><label>Password: </label> @Html.EditorFor(m => m.Password)</p>

        <button type="submit">Submit</button>
    }
</div>

    @Html.ActionLink("Sign Up", "SignUp")
</body>
</html>
