@using MyMail.Models.Entities
@model User
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "SignUp";
}

<div class="margDiv">
    <h2 align="center">SignUp</h2>
</div>

<div class="margDiv">
    @using (@Html.BeginForm("SignUp", "Account", FormMethod.Post, new{@class="form-horizontal"}))
    {
        @Html.ValidationSummary()
        
        <p><label>Login: </label> @Html.EditorFor(m => m.Login,
            new{htmlAttributes = new{@class = "form-control"}})</p>
        <p><label>Password: </label> @Html.EditorFor(m => m.Password,
            new{htmlAttributes = new {@class = "form-control"}})</p>

        <p align="center"><input type="submit" value="Submit" class="btn btn-default" /></p>
    }
</div>