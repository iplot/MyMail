@using MyMail.Models.Entities
@{
    Layout = "../Shared/_Layout.cshtml";
    ViewBag.Title = "MyMail";
    AjaxOptions opts = new AjaxOptions
    {
        UpdateTargetId = "mailsTab"
    };
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-3">

            <!--Отображаем какой юзарь в системе-->
            <div style="border-style: outset; border-color: gray">
                <p><label>User: </label> @Session["Login"]</p>
                <p><label>Account Email: </label> @ViewBag.Email</p>

                @Html.ActionLink("Add Account", "AddServerAccount", "Account")
            </div>

            <!--Функциональные кнопки-->
            <div class="row" style="margin-top: 10%">
                <div class="col-lg-3">

                    <!--Send кнопка-->
                    <button class="btn btn-default" onclick=" sendClick() ">Send</button>

                    <!--Окошко для письма-->
                    <div id="sendWindow">
                        <div id="closeSendWindow" onclick=" sendClick() ">X</div>
                        <!--Форма для отправки письма-->
                        @using (Html.BeginForm("Index", "Home", FormMethod.Post, new{@class="form-horizontal"}))
                        {
                            <p><label>To</label> @Html.TextBox("reciever", null, new{@class="form-control"})</p>
                            <p><label>Subject</label> @Html.TextBox("subject", null, new{@class="form-control"})</p>
                            <p><label>Text</label> @Html.TextArea("text", new {@class = "form-control"})</p>
                            
                            <input type="submit" value="Send" class="btn btn-default"/>
                        }
                    </div>

                    <!--Пункты выбора типа письма-->
                    <div>
                        <ul class="list-unstyled">
                            <li>@Ajax.ActionLink("Incomig", "GetMails", new {mailsType = State.Incoming}, opts)</li>
                            <li>@Ajax.ActionLink("Outgoing", "GetMails", new {mailsType = State.Outgoing}, opts)</li>
                        </ul>
                    </div>

                </div>
            </div>

        </div>
        <!--Таблица писем-->
        <div class="col-lg-9">

            <div>
                <table class="table table-hover">
                    <thead>
                        <tr><th>From</th> <th>Subject</th> <th>Date</th></tr>
                    </thead>
                    <tbody id="mailsTab">
                        @Html.Action("GetMails", "Home", new { mailsType = State.Incoming })
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>


@section Scripts{
    <script src="~/Scripts/jquery-2.1.3.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>

    <script type="text/javascript">
        function sendClick() {
            $('#sendWindow').fadeToggle();
        }
    </script>
}
